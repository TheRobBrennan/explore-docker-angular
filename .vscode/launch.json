{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Angular example app [LOCAL]",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}/examples/app"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Angular example app [KARMA]",
      "url": "http://localhost:9876/debug.html", // Docker container
      // "url": "http://localhost:9877/debug.html",    // Local development machine
      "webRoot": "${workspaceFolder}/examples/app",
      "breakOnLoad": true,
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "*": "${webRoot}/*"
      }
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Tour of Heroes [LOCAL]",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}/examples/angular-tour-of-heroes"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Tour of Heroes [KARMA]",
      "url": "http://localhost:9876/debug.html", // Docker container
      // "url": "http://localhost:9877/debug.html",    // Local development machine
      "webRoot": "${workspaceFolder}/examples/angular-tour-of-heroes",
      "breakOnLoad": true,
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "*": "${webRoot}/*"
      }
    },
  ]
}